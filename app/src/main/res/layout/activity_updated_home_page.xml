<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatedHomePage">

    <ImageView
        android:src="@drawable/homescreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/horizontalMargin1"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/verticalMargin1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        />

    <Button
        android:id="@+id/addGame"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin1"
        android:background="@android:color/transparent"
        />

    <View
        android:id="@+id/horizontalMargin2"
        android:layout_width="195dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/verticalMargin2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        />

    <ImageButton
        android:id="@+id/destination1"
        android:src="@drawable/destinationbutton"
        android:layout_width="180px"
        android:layout_height="180px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargin2"
        android:layout_below="@id/verticalMargin2"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/destination1Text"
        android:layout_width="180px"
        android:layout_height="180px"
        android:inputType="textMultiLine"
        android:textSize="16dp"
        android:background="@null"
        android:textColor="#7C7C7C"
        android:fontFamily="@font/sniglet"
        android:text="San Francisco"
        android:gravity="center"
        android:layout_toRightOf="@id/horizontalMargin2"
        android:layout_below="@id/verticalMargin2"
        android:textStyle="bold"
        android:visibility="visible"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="19sp"
        />

    <View
        android:id="@+id/horizontalMarginx1"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/horizontalMargine1"
        android:layout_width="265dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/verticalMarginx1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        />

    <ImageView
        android:id="@+id/ellipses1"
        android:src="@drawable/ellipsesannotation"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargine1"
        android:layout_below="@id/verticalMarginx1"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/exclamation1"
        android:src="@drawable/exclamationannotation"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargine1"
        android:layout_below="@id/verticalMarginx1"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/x1"
        android:src="@drawable/x"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMarginx1"
        android:layout_below="@id/verticalMarginx1"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />


    <View
        android:id="@+id/verticalMargin6"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        />

    <ImageButton
        android:id="@+id/destination2"
        android:src="@drawable/destinationbutton"
        android:layout_width="180px"
        android:layout_height="180px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin4"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/destination2Text"
        android:layout_width="180px"
        android:layout_height="180px"
        android:inputType="textMultiLine"
        android:textSize="16dp"
        android:background="@null"
        android:textColor="#7C7C7C"
        android:fontFamily="@font/sniglet"
        android:text="Paris"
        android:gravity="center"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin4"
        android:textStyle="bold"
        android:visibility="visible"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="19sp"
        />

    <View
        android:id="@+id/horizontalMarginx3"
        android:layout_width="170px"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/horizontalMargine2"
        android:layout_width="320px"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/ellipses2"
        android:src="@drawable/ellipsesannotation"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargine2"
        android:layout_below="@id/verticalMarginx2"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/exclamation2"
        android:src="@drawable/exclamationannotation"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargine2"
        android:layout_below="@id/verticalMarginx2"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/x2"
        android:src="@drawable/x"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_toRightOf="@id/horizontalMarginx3"
        android:layout_below="@id/verticalMarginx2"
        android:background="@android:color/transparent"
        />

    <View
        android:id="@+id/horizontalMargin4"
        android:layout_width="195dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/verticalMargin4"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        />

    <ImageButton
        android:id="@+id/destination3"
        android:src="@drawable/destinationbutton"
        android:layout_width="180px"
        android:layout_height="180px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargin4"
        android:layout_below="@id/verticalMargin4"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/destination3Text"
        android:layout_width="180px"
        android:layout_height="180px"
        android:inputType="textMultiLine"
        android:textSize="16dp"
        android:background="@null"
        android:textColor="#7C7C7C"
        android:fontFamily="@font/sniglet"
        android:text="Tokyo"
        android:gravity="center"
        android:layout_toRightOf="@id/horizontalMargin4"
        android:layout_below="@id/verticalMargin4"
        android:textStyle="bold"
        android:visibility="visible"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="19sp"
        />

    <View
        android:id="@+id/verticalMarginx2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        />

    <ImageView
        android:id="@+id/ellipses3"
        android:src="@drawable/ellipsesannotation"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargine1"
        android:layout_below="@id/verticalMarginx2"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/exclamation3"
        android:src="@drawable/exclamationannotation"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMargine1"
        android:layout_below="@id/verticalMarginx2"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />


    <ImageButton
        android:id="@+id/x3"
        android:src="@drawable/x"
        android:layout_width="55px"
        android:layout_height="55px"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/horizontalMarginx1"
        android:layout_below="@id/verticalMarginx2"
        android:visibility="gone"
        android:background="@android:color/transparent"
        />

    <View
        android:id="@+id/verticalMargin5"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        />

    <View
        android:id="@+id/horizontalMargin5"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/games"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_toRightOf="@id/horizontalMargin5"
        android:layout_below="@id/verticalMargin5"
        android:background="@android:color/transparent"
        />

</RelativeLayout>