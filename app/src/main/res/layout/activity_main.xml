<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/horizontalMargin1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/horizontalMargin2"
        android:layout_width="88dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/horizontalMargin3"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/verticalMargin1"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:inputType="text"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin1"
        android:textSize="12dp"
        android:background="@null"
        android:textColor="#ffffff"
        />

    <View
        android:id="@+id/verticalMargin2"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_below="@id/username"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin2"
        android:textSize="12dp"
        android:background="@null"
        android:textColor="#ffffff"
        />

    <View
        android:id="@+id/verticalMargin3"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_below="@id/password"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/horizontalMargin2"
        android:layout_below="@id/verticalMargin3"
        android:background="@android:color/transparent"
        />

    <View
        android:id="@+id/verticalMargin4"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@id/password"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@id/horizontalMargin3"
        android:layout_below="@id/verticalMargin4"
        android:background="@android:color/transparent"
        />

</RelativeLayout>