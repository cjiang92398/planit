<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpage">

    <View
        android:id="@+id/horizontalMargin1"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/horizontalMargin2"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/horizontalMargin3"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/verticalMargin1"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_height="wrap_content"
        android:hint="username"
        android:inputType="text"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin1"
        android:background="@null"
        android:textColor="#ffffff"
        android:fontFamily="@font/sniglet"
        android:textColorHint="#e7e7e7"
        android:layout_width="270dp"
        android:textSize="20dp"
        />

    <View
        android:id="@+id/verticalMargin2"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_below="@id/username"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/horizontalMargin1"
        android:layout_below="@id/verticalMargin2"
        android:textSize="20dp"
        android:background="@null"
        android:textColor="#ffffff"
        android:fontFamily="@font/sniglet"
        android:textColorHint="#e7e7e7"
        />

    <View
        android:id="@+id/verticalMargin3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/password"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@id/horizontalMargin2"
        android:layout_below="@id/verticalMargin3"
        android:background="@android:color/transparent"
        />

</RelativeLayout>